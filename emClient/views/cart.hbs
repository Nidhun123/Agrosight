{{#each ideas}}


<div class="card  mx-auto mt-4 p-3" style="width:75%;  border-radius: 25px;">
    {{!-- <h4>{{category}}</h4> --}}

    <div class="d-flex flex-row ">
        <a href="/state/{{name}}">
            <div class="p-2 ">
                <img src="/uploads/{{image}}"
                    style="display: block;height: 150px;width: 150px;object-fit: cover;border-radius: 20px; ">
            </div>
        </a><br><br><br>
        <div class="d-flex flex-column p-2 m-2">
            <a style="text-decoration: none;" href="/state/{{name}}">
                <div>
                    <p><span style="font-size:x-large; color:rgb(14, 90, 39)"><b>{{name}}</b> </span></p>
                </div>
            </a>
            <p>
                <b style="font-size:x-large; " ><i class="fas fa-rupee-sign"></i> {{newprice}}</b>
                <del style="color: #979797; font-size: large; ">{{price}} </del>
                <span style="  color: rgb(21, 116, 60); padding: 10px; font-size: x-large; ">{{discount}}% Off </span>

            </p>
            <div>
                <p><span style="font-size: large;"><b>Expiry Date :     </b>{{exp_date}}</span></p>
            </div>
        </div>
        <div>
                    <form method="post" action="/cart/{{_id}}/{{product_id}}?_method=delete">
                        <input type="hidden" name="_method" value="Delete">
                        <input onclick="rem()" type="submit" class="btn btn-danger btn-lg" value="Remove from cart">
                    </form>
        </div>



    </div>



</div>
{{else}}
<h1 style="margin-top: 20%; margin-left: 20%; color:rgb(15, 83, 32)">No items left in the cart :(</h1>
{{/each}}
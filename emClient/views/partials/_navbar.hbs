{{#if user}}
<nav class="navbar navbar-expand-sm navbar-dark" style="background-color: white;">
    <div class="container">

        <a class="navbar-brand" href="/" style="font-weight:bold; font-family:Merienda;"><span
                style="color: black; ">A</span><span style="color: rgba(31, 112, 53, 1); ">grosight</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul id="home" class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link " style="color: black; font-weight:bold; " href="/home">Home</a>
                </li>
            </ul>
            <div class="container">
                <div class="search_wrap search_wrap_3">
                    <div class="search_box">
                        <form id="form" action="/search" method="get">

                            <input type="text" class="input" name="search" id="mySearch" placeholder="Search a product">
                            <a id="icon" type="submit" role="button">
                                <i class="fas fa-search"></i>
                            </a>

                        </form>

                    </div>
                </div>
            </div>
            <div id="add" class="navbar-nav">
                <div class="nav-item">
                    <a class="nav-link " style="color: black; font-weight:bold; " href="/registration">Add Product</a>
                </div>
            </div>
            <div id="uploads" class="navbar-nav">
                <div class="nav-item">
                    <a class="nav-link " style="color: black; font-weight:bold; " href="/uploads">Uploads</a>
                </div>
            </div>
            {{#if counter}}
            <div id="cart" class="container">
                <div id="circle">
                    <div id="text">{{count}}</div>
                </div>
                <div class="cart" style="z-index: auto;">
                    <a style="color:rgb(0, 0, 0)" href="/cart"><i class="fas fa-shopping-cart fa-lg"></i></a>


                </div>
            </div>
            {{else}}
            <div id="cart" class="container">
                
                <div class="cart" style="z-index: auto;">
                    <a style="color:rgb(0, 0, 0)" href="/cart"><i class="fas fa-shopping-cart fa-lg"></i></a>


                </div>
            </div>
            {{/if}}
            <div class="rightdrop">
                <div class="dropdown">
                    <a href="#">
                        <div class="user">
                            <span class="iconify " style="color: rgb(0, 0, 0);" data-icon="majesticons:menu-alt"
                                data-inline="false"></span>
                        </div>
                    </a>

                    <div class="dropdown-content">
                        <a href="/wishlist">My Wishlist</a>
                        <a href="/orders">Orders</a>
                        <a href="/profile">Account</a>
                        <a href="/logout">Sign Out</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>
{{else}}

<div class="container row ml-4" style="">

    <a class="col-sm-2 mt-2" href="/"
        style="font-size: x-large; text-decoration:none; font-weight:bold; font-family:Merienda;"><span
            style="color: rgb(255, 255, 255); ">Agrosight</span></a>



    <a class="col-sm-2 mt-3 "
        style="color: rgb(255, 255, 255);font-size: large; font-weight:bold;text-decoration:none; " href="/">Home</a>

</div>


<style>
    body{
        background-image: url(/img/farmers.jpg);
        background-size: cover;
        background-position: top;
    }

    #ui{
        background-color:  rgba(0, 0, 0, 0.5);
        padding: 30px;
        margin-top: 50px;
        margin-bottom: 50px;
    }

    #ui label{
        color: #fff;
        font-size: 18px;
    }

    .avatar{
        width: 100px;
        height: 100px;
        border-radius: -50%;
        position: absolute;
        top: 0px;
        left: calc(50% - 50px);
        bottom: 50px;
    }

    h1{
        color: #fff;
    }
    
    #ui a{
        text-decoration: none;
        font-size: 12px;
        line-height: 20px;
        color: darkgrey;
    }

    #ui a:hover{
        color: #ffc107;
    }

    h3{
        color: #fff;
    }

    #ui input[type="submit"]{
        border: none;
        outline: none;
        height: 40px;
        background: #DC143C;
        color: #fff;
        font-size: 18px;
        margin-top: 10px;
    }

    #ui input[type="submit"]:hover{
        cursor: pointer;
        background: #ffc107;
        color: #000;
    }
    
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-4"> </div>
        <div class="col-lg-4">
            
            <div id="ui">
                <br>
                <img class="avatar" src="/img/avatar.jpg">
               
                <form method="post" action="/users/login" class="form-group">
                    <h3 class="text-center">Login Here</h1>
                    
                    <br>
                    <label>Email</label>
                    <input type="email" name="email" class="form-control"
                    placeholder="Enter your email" required>
                    <br>

                    <label>Password</label>
                    <input type="password" name="password" class="form-control"
                    placeholder="Enter your password" required>

                    <br>
                    <input type="submit" name="submit" value="Sign In" 
                    class="btn btn-block btn-lg">
                    <br>

                    <br>
                    <a href="/users/register">Don't have an account?</a>

                </form>
            </div>
        </div>
        <div class="col-lg-4"> </div>
        
    </div>
</div>
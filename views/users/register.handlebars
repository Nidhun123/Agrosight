<style>
    body{
        background-image: url(/img/farmers.jpg);
        background-size: cover;
        background-position: top;
    }

    #ui{
        background-color:  rgba(0, 0, 0, 0.5);
        padding: 30px;
        margin-top: 50px;
        margin-bottom: 50px;
    }

    #ui label{
        color: #fff;
    }

    .avatar{
        width: 100px;
        height: 100px;
        border-radius: -50%;
        position: absolute;
        top: 0px;
        left: calc(50% - 50px);
        bottom: 50px;
    }

    h3{
        color: #fff;
    }

    #ui input[type="submit"]{
        border: none;
        outline: none;
        height: 40px;
        background: #DC143C;
        color: #fff;
        font-size: 18px;
        margin-top: 10px;
    }

    #ui input[type="submit"]:hover{
        cursor: pointer;
        background: #ffc107;
        color: #000;
    }
    
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-3"> </div>
        <div class="col-lg-6">
            
            <div id="ui">
                <br>
                <img class="avatar" src="/img/avatar.jpg">
               
                <form action="/users/register" method="post" class="form-group">
                    <h3 class="text-center">Register Here</h3>
                    <br>
                    <div class="row">

                        <div class="col-lg-6">
                            <label for="fname">First Name</label>
                            <input type="text" name="fname" 
                            value="{{fname}}" class="form-control" 
                            placeholder="Enter your first name" required>
                        </div>

                        <div class="col-lg-6">
                            <label for="lname">Last Name</label>
                            <input type="text" name="lname"
                            value="{{lname}}" class="form-control"
                            placeholder="Enter your last name" required>
                        </div>
                    </div>
                    <br>

                    <label for="email">Email</label>
                    <input type="email" name="email" 
                    value="{{email}}" class="form-control"
                    placeholder="Enter your email" required>
                    <br>


                    <label for="date_of_birth">Date of birth</label>
                    <input type="date" class="form-control" name="date_of_birth" 
                    value="{{date_of_birth}}" placeholder="dd-mm-yyyy" required>
                    <br>                   

                    <label for="phone">Phone Number</label>
                    <input type="text" name="phone" class="form-control"
                    value="{{phone}}" placeholder="Enter your phone number" required>
                    <br>

                    <div class="row">

                        <div class="col-lg-6">
                            <label for="password">Password</label>
                            <input type="password" name="password" 
                            value="{{password}}" class="form-control" 
                            placeholder="Enter your new password" required>
                        </div>

                        <div class="col-lg-6">
                            <label for="password2">Retype-Password</label>
                            <input type="password" name="password2" 
                            value="{{password2}}" class="form-control"
                            placeholder="Re-type Password" required>
                        </div>
                    </div>
                    <br>
                     
                    <input type="submit" name="submit" value="Sign Up" 
                    class="btn btn-block btn-lg">
                </form>
            </div>
        </div>
        <div class="col-lg-3"> </div>
        
    </div>
</div>
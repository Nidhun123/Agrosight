<div class="card card-body">
    <h3>Edit Video Idea</h3>
    <form action="/ideas/uploads/{{idea._id}}?_method=put" method="post">
            <input type="hidden" name="_method" value="put">

        {{!-- <div class="form-group">
            <label for="Title">category</label>
            <input type="text" class="form-control" name="title" value="{{idea.title}}" required>
        </div> --}}

            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" value="{{idea.name}}" required>
            </div>

            <div class="form-group">
                <label for="price" id="price">Price</label>
                <input type="number" class="form-control" name="price" value="{{idea.price}}" required>
            </div>

            <div class="form-group">
                <label for="exp_date">Expiry Date</label>
                <input type="date" class="form-control" name="exp_date" value="{{idea.exp_date}}" required>
            </div>

            <div class="form-group">
                <label for="pkd_date">Packed Date</label>
                <input type="date" class="form-control" name="pkd_date" value="{{idea.pkd_date}}" required>
            </div>

            <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="text" class="form-control" name="quantity" value="{{idea.quantity}}" required>
            </div>

            <div class="form-group">
                <label for="discount">Discount</label>
                <input type="text" class="form-control" name="discount" id="discount" value="{{idea.discount}}" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


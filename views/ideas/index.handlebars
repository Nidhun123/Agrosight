{{#each ideas}}

    <div class="card card-body mb-2" >
        <h4>{{category}}</h4>
        <p><span style="font-size: large;"><b>Name :</b> {{name}}</span></p>
        <p><span style="font-size: large;"><b>Price :</b> {{price}}</p>
        <p><span style="font-size: large;"><b>Expiry Date :</b> {{exp_date}}</p>
        <p><span style="font-size: large;"><b>Packed Date :</b> {{pkd_date}}</p>
        <p><span style="font-size: large;"><b>Quantity :</b> {{quantity}}</p>
        <p><span style="font-size: large;"><b>Discount :</b> {{discount}}%</p>
        
        <a class="btn btn-success btn-block mb-2" href="/ideas/edit/{{_id}}">Edit</a>
        <a class="btn btn-primary btn-block mb-2" href="/ideas/product/{{_id}}">View</a>
        <form method="post" action="/ideas/{{_id}}?_method=delete">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" class="btn btn-danger btn-block" value="delete">
        </form>
    </div>
{{else}}
    <p>No video ideas listed</p>
{{/each}}

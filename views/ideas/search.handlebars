{{#each ideas}}

<div class="card card-body mb-2" style="  border-radius: 25px;
  ">
    {{!-- <h4>{{category}}</h4> --}}

    <div class="d-flex flex-row ">
        <a href="/ideas/product/{{_id}}">
            <div class="p-2 ">
                <img src="/uploads/{{image}}"
                    style="display: block;height: 150px;width: 150px;object-fit: cover;border-radius: 20px; ">
            </div>
        </a><br><br><br>
        <div class="d-flex flex-column p-2 m-2">
            <a style="text-decoration: none;" href="/ideas/product/{{_id}}">
                <div>
                    <p><span style="font-size:x-large; color:rgb(14, 90, 39)"><b>{{name}}</b> </span></p>
                </div>
            </a>
            <div>
                <p><span style="font-size: large;"><b>Price :</b>      <i class="fas fa-rupee-sign"></i>  {{price}}</span></p>
            </div>
            <div>
                <p><span style="font-size: large;"><b>Expiry Date :     </b>{{exp_date}}</span></p>
            </div>
        </div>



    </div>



</div>
{{else}}
<h1 style="margin-top: 20%; margin-left: 20%; color:rgb(15, 83, 32)">No products matching the searched item :(</h1>
{{/each}}
